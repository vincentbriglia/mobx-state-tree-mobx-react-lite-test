{
  "extends": ["@lego/tslint-config-react-native"],
  "rules": {
    "no-submodule-imports": [
      true,
      "~",
      "mobx",
      "mobx-react",
      "react-native-vector-icons",
      "styled-components",
      "react-native-camera",
      "@lego/react-native-base-components"
    ],
    "match-default-export-name": false,
    "strict-boolean-expressions": false,
    "completed-docs": false,
    "no-unbound-method": false,
    "naming-convention": false,
    "jsx-use-translation-function": false,
    "prefer-function-over-method": false,
    "no-import-side-effect": [true, { "ignore-module": "^jest-enzyme|react-native$" }],
    "no-implicit-dependencies": [true, "dev", ["~"]],
    "object-literal-sort-keys": [true, "ignore-case"],
    "no-void-expression": true,
    "jsx-ban-elements": {
      "options": [
        ["^i$", "do not use i."],
        ["^b$", "do not use b."],
        ["^s$", "do not use s."],
        ["^u$", "do not use u."],
        ["^strike$", "do not use strike."],
        ["^marquee$", "do not use marquee."],
        ["^strong$", "do not use strong."]
      ]
    }
  }
}
